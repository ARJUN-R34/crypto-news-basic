<%- include('./includes/head.ejs') %>
    <script src="./bower_components/crypto-news-api/dist/bundle.js"></script>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('./includes/navigation.ejs') %>

    <main>
        <% for(article of response) { %>
            <article class="card product-item centered" style="overflow:auto">
                <header class="card__header">
                    <h1 class="product__title" style="color:azure"><%= article.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= article.originalImageUrl %>" alt="" />
                </div>
                <div class="card__content">
                    <h6 class="product__price" style="color: azure">Posted By: <%= article.sourceDomain %></h6>
                    <p class="product__description"><%= article.description %></p>
                    <p class="product__link"></p><br><hr><br>
                    <a href="<%= article.url %>" style="color: azure" class="product__price"> To read the full article, click here </a>
                </div>
            </article>
        <% } %>
    </main>

</body>